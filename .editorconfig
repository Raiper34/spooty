# Editor configuration, see https://editorconfig.org
# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,js,mjs,cjs}]
quote_type = single
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
end_of_line = lf

# Windows batch files
[*.{bat,cmd,ps1}]
end_of_line = crlf

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# Dockerfile
[Dockerfile]
indent_size = 4

