DB_PATH=./config/db.sqlite
FE_PATH=../frontend/browser
DOWNLOADS_PATH=./downloads
FORMAT=mp3
PORT=3000
REDIS_PORT=6379
REDIS_HOST=localhost
REDIS_RUN=true

# JWT Secret for authentication (change this to a random secure string)
JWT_SECRET=spooty-secret-key-change-in-production

# Default Admin User (use Apache MD5 htpasswd format)
# To generate password hash: node generate-password.js yourpassword
# Or use: docker exec -it spooty-container node generate-password.js yourpassword
# Default password is "admin" - CHANGE THIS IN PRODUCTION!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=$apr1$uBmP/B6m$kYzjPW4IVjgwHWg8XIKWW0

# Credentials for Spotify API
SPOTIFY_CLIENT_ID=your_client_id
SPOTIFY_CLIENT_SECRET=your_client_secret

YT_COOKIES=
YT_DOWNLOADS_PER_MINUTE=3